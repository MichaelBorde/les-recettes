{
  "compilerOptions": {
    "outDir": "../dist/app",
    "target": "es5",
    "module": "commonjs",
    "noEmit": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2015", "es2017", "dom"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
