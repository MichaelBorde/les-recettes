{
  "compilerOptions": {
    "outDir": "../dist/server",
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2017"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
